<script>
  var e = document.forms[0][0];
  var gender = e.options[e.selectedIndex].text;
  document.getElementById("hisorher").innerHTML = gender;

  function populateGender(){
      var e = document.forms[0][0];
      var gender = e.options[e.selectedIndex].text;
      document.getElementById("hisorher").innerHTML = gender;

  }

  function validateNames(){

    $( '#name1' ).parsley( 'validate' )
    $( '#name2' ).parsley( 'validate' )

    if ($( '#name1' ).parsley( 'validate' ) && $( '#name2' ).parsley( 'validate' )) {
              $('#enterInfo').slideToggle('slow', function() {
              $('#sendtext').slideToggle('slow')
            // Animation complete.
          });
    }

  }


</script>

