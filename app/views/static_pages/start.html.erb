    }

  }

function validateNumber(){

  $( '#number' ).parsley( 'validate' )

  if($( '#number' ).parsley( 'validate' )){
    calltimer();
    return true;
  }
  else{
    return false;
  }


}



var count=10;

function calltimer(){
  var counter=setInterval(timer, 1000); //1000 will  run it every 1 second  
}


function timer()
{
  count=count-1;
  if (count <= 0)
  {
     clearInterval(counter);
